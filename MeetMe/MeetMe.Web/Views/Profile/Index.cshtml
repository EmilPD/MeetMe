@using MeetMe.Web.Models.Profile
@model ProfileViewModel

@section styles {
    <link href="~/Content/profile.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/publication.css" rel="stylesheet" />
}

<div class="mainbody container-fluid">
    <div class="row">
        <div class="col-lg-3 col-md-3 hidden-sm hidden-xs">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="media">
                        <div align="center">
                            <img class="thumbnail img-responsive" src="@Model.ProfileImageUrl" width="200px" height="200px">
                            <span><strong>@Model.FullName</strong></span>
                        </div>
                        <div class="media-body">
                            <hr/>
                            <h3>
                                <strong>Age</strong>
                            </h3>
                            <p>
                                @if (Model.Age != 0)
                                {
                                    @Model.Age
                                }
                            </p>
                            <hr/>
                            <h3>
                                <strong><i class="fa fa-map-marker"></i> Location</strong>
                            </h3>
                            <p>@Model.City</p>
                            <hr/>
                            <h3>
                                <strong><i class="fa fa-graduation-cap"></i> Education</strong>
                            </h3>
                            <p>@Model.School</p>
                            <hr/>
                            <h3>
                                <strong><i class="fa fa-briefcase"></i> Work</strong>
                            </h3>
                            <p>@Model.Company</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-9 col-xs-9 col-md-offset-1">
            <div data-spy="scroll" class="tabbable-panel">
                <div class="tabbable-line">
                    <ul class="nav nav-tabs ">
                        <li class="active">
                            <a href="#tab_default_1" data-toggle="tab">
                                Home
                            </a>
                        </li>
                        <li>
                            <a href="#tab_default_2" data-toggle="tab">
                                Personal Information
                            </a>
                        </li>
                        <li>
                            <a href="#tab_default_3" data-toggle="tab">
                                Friends
                            </a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="tab_default_1">
                            <div class="well user-create-post">
                                <form class="form-horizontal" role="form">
                                    <h4>What's New</h4>
                                    <div class="form-group" style="padding:14px;">
                                        <textarea class="form-control" placeholder="Update your status"></textarea>
                                    </div>
                                    <button class="btn btn-primary pull-right" type="button">Post</button><ul class="list-inline"><li><a href=""><i class="glyphicon glyphicon-upload"></i></a></li><li><a href=""><i class="glyphicon glyphicon-camera"></i></a></li><li><a href=""><i class="glyphicon glyphicon-map-marker"></i></a></li></ul>
                                </form>
                            </div>
                            <div class="user-publications">
                                @Html.Action("UserPublications", "Publication", new { id = User.Identity.GetUserId(), skip = 0, count = 20 })
                            </div>
                        </div>
                        <div class="tab-pane" id="tab_default_2">
                            <p>
                                Education& Career
                            </p>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="email">Highest Education:</label>
                                        <p> MBA/PGDM</p>
                                    </div>
                                    <div class="form-group">
                                        <label for="email">Place of Birth:</label>
                                        <p> pune, maharashtra</p>
                                    </div>
                                    <div class="form-group">
                                        <label for="email">Place of Birth:</label>
                                        <p> pune, maharashtra</p>
                                    </div>
                                    <div class="form-group">
                                        <label for="email">Place of Birth:</label>
                                        <p> pune, maharashtra</p>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="email">Place of Birth:</label>
                                        <p> pune, maharashtra</p>
                                    </div>
                                    <div class="form-group">
                                        <label for="email">Place of Birth:</label>
                                        <p> pune, maharashtra</p>
                                    </div>
                                    <div class="form-group">
                                        <label for="email">Place of Birth:</label>
                                        <p> pune, maharashtra</p>
                                    </div>
                                    <div class="form-group">
                                        <label for="email">Place of Birth:</label>
                                        <p> pune, maharashtra</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="tab_default_3">
                            <span>Friends</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>