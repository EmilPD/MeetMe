@using Microsoft.AspNet.Identity
@using MeetMe.Web.ViewModels.Publications
@model IEnumerable<PublicationViewModel>

@foreach (var publication in Model)
{
    <div class="dashboard">
        <div class="row">
            <div class="tab-content col-md-9">
                <div role="tabpanel" class="tab-pane profile-pane active" id="profile">
                    <div>
                        <div>
                            <div class="header">
                                <img class="col-sm-3" style="width:80px;height:40px;" src="@publication.AuthorImageUrl">
                                <h4>@publication.Author <small>@publication.CreatedOn</small></h4>
                            </div>
                            <div class="content">
                                <div class="row">
                                    <div class="col-sm-11">
                                        <p>
                                            @if (publication.PublicationImageUrl.Length > 22)
                                            {
                                                <img class="publication-img" src="@publication.PublicationImageUrl" />
                                            }
                                            @publication.Content
                                        </p>
                                    </div>
                                    <hr />
                                    <div class="col-sm-2 col-sm-offset-1">
                                        @if (publication.Likes == 0)
                                        {
                                            <a data-id="@publication.Id" data-userid="@User.Identity.GetUserId()" class="like-publication comment-icons glyphicon glyphicon-thumbs-up"><span id="publication-like-@publication.Id"></span></a>
                                        }
                                        else
                                        {
                                            <a data-id="@publication.Id" data-userid="@User.Identity.GetUserId()" class="like-publication comment-icons glyphicon glyphicon-thumbs-up"><span id="publication-like-@publication.Id">@publication.Likes</span></a>
                                        }
                                    </div>
                                    <div class="col-sm-2">
                                        @if (publication.Dislikes == 0)
                                        {
                                            <a data-id="@publication.Id" class="dislike-publication comment-icons glyphicon glyphicon-thumbs-down"><span id="publication-dislike-@publication.Id"></span></a>
                                        }
                                        else
                                        {
                                            <a data-id="@publication.Id" class="dislike-publication comment-icons glyphicon glyphicon-thumbs-down"><span id="publication-dislike-@publication.Id">@publication.Dislikes</span></a>
                                        }
                                    </div>
                                    <div class="col-sm-2">
                                        <a class="comment-icons glyphicon glyphicon-share">
                                            <span> Share</span>
                                        </a>
                                    </div>
                                    <hr />
                                </div>
                            </div>
                            <div>
                                <ul class="comment-container" id="comments-@publication.Id">
                                    @for (int i = 0; i < 3; i++)
                                    {
                                        if (i > 1)
                                        {
                                            <li class="hidden">
                                                <div class="comment-item">
                                                    <img style="width:40px;height:40px;" src="http://i9.photobucket.com/albums/a88/creaticode/avatar_1_zps8e1c80cd.jpg" />
                                                    <span>Author Name</span>
                                                    <span class="label label-primary">author</span>
                                                    <pre class="comment-area">My comment</pre>
                                                </div>
                                            </li>
                                        }
                                        else
                                        {
                                            <li>
                                                <div class="comment-item">
                                                    <img style="width:40px;height:40px;" src="http://i9.photobucket.com/albums/a88/creaticode/avatar_1_zps8e1c80cd.jpg" />
                                                    <span>Author Name</span>
                                                    <span class="label label-primary">author</span>
                                                    <pre class="comment-area">My comment</pre>
                                                </div>
                                            </li>
                                        }
                                    }
                                </ul>
                                <div id="show-@publication.Id" class="text-center show-comments">
                                    <span data-info="@publication.Id">Show all comments</span>
                                </div>
                                <div id="hide-@publication.Id" class="text-center hidden hide-comments">
                                    <span data-info="@publication.Id">Hide comments</span>
                                </div>
                            </div>
                            <div class="widget-area no-padding blank">
                                <div class="status-upload">
                                    @* Ajax form! *@
                                    <form>
                                        <textarea class="fa-align-center" placeholder="What are you doing right now?"></textarea>
                                        <button type="submit" title="Add comment" class="btn btn-success green"><i class="fa fa-comment-o"></i> Comment</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}